<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kara4k.tutor18">

    <application
        android:name=".other.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.PersonActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".view.activities.LessonActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".view.activities.SchedulerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".view.activities.EventDetails"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".view.activities.EditTextActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
    </application>

</manifest>