<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_default"
                android:padding="@dimen/dimen_default"
                android:background="@android:color/darker_gray"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/day_text_view"
        android:layout_width="match_parent"
        android:text="18 декабря"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lessons_text_view"
        android:layout_below="@+id/day_text_view"
        android:text="3 lessons"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_text_view"
        android:text="$ 12.50"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/lessons_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>