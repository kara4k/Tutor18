<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dimen_default"
                      android:layout_marginRight="@dimen/dimen_default"
                      android:animateLayoutChanges="true"
                      android:orientation="vertical">

            <com.kara4k.tutor18.view.custom.ItemView
                android:id="@+id/day_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_default"
                app:icon_src="@drawable/ic_today_black_24dp"
                app:icon_is_visible="true"
                app:title_text="Day of week:"/>

            <com.kara4k.tutor18.view.custom.ItemView
                android:id="@+id/start_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_default"
                app:icon_src="@drawable/ic_access_time_black_24dp"
                app:icon_is_visible="true"
                app:title_text="Start:"/>

            <com.kara4k.tutor18.view.custom.ItemView
                android:id="@+id/duration_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_default"
                app:icon_src="@drawable/ic_timer_black_24dp"
                app:icon_is_visible="true"
                app:title_text="Duration:"/>

            <com.kara4k.tutor18.view.custom.ItemView
                android:id="@+id/price_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_default"
                app:icon_src="@drawable/ic_attach_money_black_24dp"
                app:icon_is_visible="true"
                app:title_text="Price:"/>

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimen_default"
        android:layout_marginRight="@dimen/dimen_default"
        android:src="@drawable/ic_check_white_24dp"/>

</RelativeLayout>

